<!DOCTYPE html>
<html data-theme="light" lang="<%= I18n.locale %>">
  <head>
    <title><%= content_for(:title) || t('app_name') %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <!-- Chart.js CDN - Load before Stimulus -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.js"></script>

    <%= javascript_importmap_tags %>
    
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const storedTheme = localStorage.getItem('theme')
        const systemTheme = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light'
        const theme = storedTheme || systemTheme
        
        document.documentElement.setAttribute('data-theme', theme)

        if (theme === 'dark') {
          document.querySelector('.theme-light-icon')?.classList.add('hidden')
          document.querySelector('.theme-dark-icon')?.classList.remove('hidden')
        } else {
          document.querySelector('.theme-light-icon')?.classList.remove('hidden')
          document.querySelector('.theme-dark-icon')?.classList.add('hidden')
        }
      })
    </script>
  </head>

  <body class="bg-base-200" data-controller="theme">
    <%= render "shared/navbar" %>
    
    <% if user_signed_in? %>
      <div class="drawer lg:drawer-open">
        <input id="my-drawer-2" type="checkbox" class="drawer-toggle" />
        
        <div class="drawer-content">
          <!-- Flash Messages -->
          <% flash.each do |type, message| %>
            <% next if message.blank? %>
            <div class="alert alert-<%= flash_type_to_class(type) %> shadow-lg mb-4 mx-4">
              <div>
                <%= flash_icon(type) %>
                <span><%= message %></span>
              </div>
            </div>
          <% end %>
          
          <div class="w-full max-w-7xl mx-auto">
            <%= yield %>
          </div>
        </div>
        
        <%= render "shared/sidebar" %>
      </div>
    <% else %>
      <div class="w-full">
         <% flash.each do |type, message| %>
           <% next if message.blank? %>
           <div class="alert alert-<%= flash_type_to_class(type) %> shadow-lg max-w-md mx-auto mt-4">
             <div>
               <%= flash_icon(type) %>
               <span><%= message %></span>
             </div>
           </div>
         <% end %>
        <%= yield %>
      </div>
    <% end %>
  </body>
</html>
