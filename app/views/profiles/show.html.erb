<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8"><%= t('profile.title') %></h1>

  <div class="card bg-base-100 shadow-xl" data-controller="inline-edit">
    <div class="card-body">
      <!-- View Mode -->
      <div data-inline-edit-target="viewMode">
        <div class="flex justify-between items-center mb-6">
          <h2 class="card-title"><%= t('profile.settings') %></h2>
          <button class="btn btn-ghost btn-sm" data-action="inline-edit#toggleEdit">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
            </svg>
          </button>
        </div>

        <div class="grid md:grid-cols-1 gap-8">
          <!-- Shop Info -->
          <div class="space-y-4">
            <div class="flex items-center gap-4">
              <% if @shop.logo.attached? %>
                <%= image_tag @shop.logo, class: "w-24 h-24 object-cover rounded-lg", data: { inline_edit_target: "logoDisplay" } %>
              <% end %>
              <div>
                <p class="font-medium" data-inline-edit-target="shopNameDisplay"><%= @shop.name %></p>
                <p class="text-sm opacity-70"><%= current_user.email %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Edit Mode -->
      <div data-inline-edit-target="editMode" class="hidden">
        <%= form_with(model: @shop, url: update_shop_profiles_path, data: { inline_edit_target: "form", action: "submit->inline-edit#submitForm" }) do |f| %>
          <div class="flex justify-between items-center mb-6">
            <h2 class="card-title"><%= t('profile.settings') %></h2>
            <button type="button" class="btn btn-ghost btn-sm bg-red-500 text-white" data-action="inline-edit#toggleEdit">
              <%= t('actions.cancel') %>
            </button>
          </div>

          <div class="grid md:grid-cols-2 gap-8">
            <div class="space-y-4">
              <div class="form-control">
                <%= f.label :name, t('profile.shop.name'), class: "label" %>
                <%= f.text_field :name, class: "input input-bordered" %>
              </div>

              <div class="form-control">
                <%= f.label :logo, t('profile.shop.logo'), class: "label" %>
                <%= f.file_field :logo, class: "file-input file-input-bordered" %>
              </div>
              <div class="divider"><%= t('profile.security') %></div>

              <%= fields_for :user, current_user do |u| %>
                <div class="form-control">
                  <%= u.label :current_password, t('profile.user.current_password'), class: "label" %>
                  <%= u.password_field :current_password, class: "input input-bordered" %>
                </div>

                <div class="form-control">
                  <%= u.label :password, t('profile.user.new_password'), class: "label" %>
                  <%= u.password_field :password, class: "input input-bordered" %>
                </div>

                <div class="form-control">
                  <%= u.label :password_confirmation, t('profile.user.password_confirmation'), class: "label" %>
                  <%= u.password_field :password_confirmation, class: "input input-bordered" %>
                </div>
              <% end %>
            </div>
          </div>
          <div class="card-actions justify-end mt-6">
            <%= f.submit t('profile.actions.update'), class: "btn btn-primary" %>
          </div>
        <% end %>
         <!-- Price Visibility Toggle -->
           <h3 class="text-xl font-semibold mb-4"><%= t('price.visibility')%></h3>
             <%= form_with url: toggle_price_visibility_profiles_path, method: :patch, local: true, class: "space-y-4", id: "priceForm" do |f| %>
               <div class="form-control">
                 <label class="label cursor-pointer justify-start gap-4">
                    <span class="label-text"><%= t('price.toggle_label') %> </span>
                    <%= f.check_box :show_prices, { id: "priceToggle", class: "toggle toggle-primary" }, "true", "false" %>
                 </label>
               </div>
                <!-- Hidden input to hold checkbox value -->
                <%= hidden_field_tag :password, "", id: "hiddenPasswordField" %>
               <% end %>
           <!-- Password Modal -->
          <div id="passwordModal" class="fixed inset-0 hidden backdrop-blur-sm bg-black/30 flex items-center justify-center z-50">
            <div class="bg-white rounded-lg shadow-lg w-full max-w-sm p-6">
              <h2 class="text-xl font-semibold mb-4"> <%= t('price.password_title') %></h2>
              <div class="form-control">
                <%= label_tag :password, t('price.password') , class: "label" %>
                <%= password_field_tag :password, nil, class: "input input-bordered w-full", id: "modalPasswordInput", onkeydown: "handle(event)", required: true %>
              </div>
              <div class="flex justify-end gap-2 mt-2">
                <button type="button" id="cancelModal" class="btn btn-outline"> <%= t('price.cancel')%> </button>
                <button type="submit" id="confirmModal" class="btn btn-primary"><%= t('price.confirm')%></button>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>
<%# This JS code handle Price Visibility %>
<script>
  document.addEventListener("turbo:load", () => {
    const toggle = document.getElementById("priceToggle");
    const modal = document.getElementById("passwordModal");
    const cancelBtn = document.getElementById("cancelModal");
    const confirmBtn = document.getElementById("confirmModal");
    const passwordInput = document.getElementById("modalPasswordInput");
    const hiddenPasswordField = document.getElementById("hiddenPasswordField");
    const form = document.getElementById("priceForm");

     // Initialize toggle state from server
  toggle.checked = <%= current_user.show_prices %>;

  toggle.addEventListener("change", (event) => {
    if (toggle.checked !== <%= current_user.show_prices %>) {
      event.preventDefault();
      modal.classList.remove("hidden");
    }
  });

  cancelBtn.addEventListener("click", () => {
    modal.classList.add("hidden");
    toggle.checked = <%= current_user.show_prices %>; // Revert to saved state
    passwordInput.value = "";
  });

  confirmBtn.addEventListener("click", () => {
    const password = passwordInput.value;
    if (!password) {
      alert("Please enter password");
      return;
    }
    hiddenPasswordField.value = password;
    modal.classList.add("hidden");
    passwordInput.value = "";
    form.submit();
  });
     passwordInput.addEventListener("keydown", (event)=>{
      if (event.key == "Enter"){
        event.preventDefault();
        confirmBtn.click();
      }
     })
});
</script>