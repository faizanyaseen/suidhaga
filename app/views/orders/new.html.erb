<%# Header %>
<div class="pb-5 border-b border-gray-200">
  <h3 class="text-2xl leading-6 font-medium text-gray-900">New Order</h3>
</div>

<%= form_with(model: @order, class: "mt-6") do |f| %>
  <% if @order.errors.any? %>
    <div class="rounded-md bg-red-50 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @order.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-6 sm:space-y-5">
    <%# Customer Selection %>
    <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start">
      <%= f.label :customer_id, class: "block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2" %>
      <div class="mt-1 sm:mt-0 sm:col-span-2">
        <%= f.collection_select :customer_id, @customers, :id, ->(c) { "#{c.first_name} #{c.last_name}" }, 
            { prompt: "Select a customer" }, 
            { class: "max-w-lg block focus:ring-indigo-500 focus:border-indigo-500 w-full shadow-sm sm:max-w-xs sm:text-sm border-gray-300 rounded-md" } %>
      </div>
    </div>

    <%# Line Items %>
    <div class="mt-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Line Items</h3>
      <template data-controller="template" id="line-item-template">
        <div class="line-item-fields border rounded-lg p-4 mb-4 relative">
          <button type="button" data-action="click->template#remove" class="absolute top-2 right-2 text-gray-400 hover:text-gray-500">
            <span class="sr-only">Remove line item</span>
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>

          <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
            <div class="sm:col-span-2">
              <label class="block text-sm font-medium text-gray-700">Price</label>
              <div class="mt-1">
                <input type="number" name="order[line_items_attributes][NEW_RECORD][price]" step="0.01" min="0" 
                       class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
              </div>
            </div>

            <div class="sm:col-span-2">
              <label class="block text-sm font-medium text-gray-700">Number of Pieces</label>
              <div class="mt-1">
                <input type="number" name="order[line_items_attributes][NEW_RECORD][number_of_pieces]" min="1" 
                       class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
              </div>
            </div>

            <div class="sm:col-span-6">
              <label class="block text-sm font-medium text-gray-700">Images</label>
              <div class="mt-1">
                <input type="file" name="order[line_items_attributes][NEW_RECORD][images][]" multiple accept="image/*" 
                       class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300">
              </div>
            </div>

            <%# Measurement Types %>
            <div class="sm:col-span-6">
              <div class="measurement-types" data-controller="nested-form">
                <template data-nested-form-target="template">
                  <div class="measurement-type-fields grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6 border-t pt-4 mt-4">
                    <div class="sm:col-span-3">
                      <label class="block text-sm font-medium text-gray-700">Measurement Type</label>
                      <div class="mt-1">
                        <select name="order[line_items_attributes][NEW_RECORD][line_items_measurement_types_attributes][NEW_MT_RECORD][measurement_type_id]" 
                                class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
                          <option value="">Select a measurement type</option>
                          <% @measurement_types.each do |mt| %>
                            <option value="<%= mt.id %>"><%= mt.key %></option>
                          <% end %>
                        </select>
                      </div>
                    </div>

                    <div class="sm:col-span-2">
                      <label class="block text-sm font-medium text-gray-700">Value</label>
                      <div class="mt-1">
                        <input type="text" name="order[line_items_attributes][NEW_RECORD][line_items_measurement_types_attributes][NEW_MT_RECORD][value]" 
                               class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
                      </div>
                    </div>

                    <div class="sm:col-span-1 flex items-end">
                      <button type="button" data-action="nested-form#remove" class="text-red-600 hover:text-red-700">Remove</button>
                    </div>
                  </div>
                </template>

                <div data-nested-form-target="target"></div>

                <button type="button" data-action="nested-form#add" class="mt-2 text-sm text-indigo-600 hover:text-indigo-500">
                  Add Measurement
                </button>
              </div>
            </div>
          </div>
        </div>
      </template>

      <div data-controller="nested-form">
        <template data-nested-form-target="template">
          <%= f.fields_for :line_items, child_index: 'NEW_RECORD' do |line_item| %>
            <%= render 'line_item_fields', f: line_item %>
          <% end %>
        </template>

        <div data-nested-form-target="target">
          <%= f.fields_for :line_items do |line_item| %>
            <%= render 'line_item_fields', f: line_item %>
          <% end %>
        </div>

        <button type="button" data-action="nested-form#add" class="mt-2 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          Add Line Item
        </button>
      </div>
    </div>
  </div>

  <div class="pt-5">
    <div class="flex justify-end">
      <%= link_to "Cancel", orders_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= f.submit "Create Order", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
<% end %> 