<%# Order Summary %>
<div class="card bg-base-100 shadow-xl">
  <div class="card-body">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
      <h2 class="card-title text-2xl font-bold">Order #<%= @order.id %></h2>
      <div class="badge badge-lg <%= order_status_color(@order.status) %> mt-2 sm:mt-0">
        <%= @order.status.humanize %>
      </div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h3 class="text-lg font-medium mb-2">Customer Information</h3>
        <div class="card bg-base-200">
          <div class="card-body p-4">
            <p><strong>Name:</strong> <%= "#{@order.customer.first_name} #{@order.customer.last_name}" %></p>
            <p><strong>Phone:</strong> <%= @order.customer.phone %></p>
            <p><strong>Email:</strong> <%= @order.customer.email %></p>
            <p><strong>Address:</strong> <%= @order.customer.address %></p>
          </div>
        </div>
      </div>
      
      <div>
        <h3 class="text-lg font-medium mb-2">Order Details</h3>
        <div class="card bg-base-200">
          <div class="card-body p-4">
            <p><strong>Order Date:</strong> <%#= @order.order_date&.strftime("%B %d, %Y") %></p>
            <p><strong>Delivery Date:</strong> <%#= @order.delivery_date&.strftime("%B %d, %Y") %></p>
            <p><strong>Total:</strong> <%= number_to_currency(@order.total_price) %></p>
          </div>
        </div>
      </div>
    </div>
    
    <div class="divider">Line Items</div>
    
    <div class="space-y-6">
      <% @order.line_items.each do |item| %>
        <div class="card bg-base-200">
          <div class="card-body p-4">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between">
              <h4 class="card-title"><%= item.name %></h4>
              <div class="badge <%= order_status_color(item.status) %> mt-2 md:mt-0">
                <%= item.status.humanize %>
              </div>
            </div>
            
            <p class="mt-2"><%= item.description %></p>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-4">
              <div>
                <p><strong>Price:</strong> <%= number_to_currency(item.price) %></p>
              </div>
              <div>
                <p><strong>Quantity:</strong> <%= item.number_of_pieces %></p>
              </div>
              <div>
                <p><strong>Subtotal:</strong> <%= number_to_currency(item.price * item.number_of_pieces) %></p>
              </div>
            </div>
            <% if item.description.present? %>
              <p><strong>Notes:</strong> <%#= item.description %></p>
            <% end %>
            <% if item.images.attached? %>
              <div class="divider">Images</div>
              <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-2">
                <% item.images.each do |image| %>
                  <div class="relative">
                    <%= link_to image_tag(image, class: "w-full h-32 object-cover rounded-lg"), url_for(image), target: "_blank" %>
                  </div>
                <% end %>
              </div>
            <% end %>
            
            <% if item.line_items_measurement_types.any? %>
              <div class="divider">Measurements</div>
              <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
                <% item.line_items_measurement_types.each do |measurement| %>
                  <div class="bg-base-100 p-3 rounded-lg">
                    <p class="font-medium"><%= measurement.measurement_type.key %></p>
                    <p class="text-lg"><%= measurement.value %></p>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="flex justify-between mt-6">
      <%= link_to orders_path, class: "btn btn-ghost" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Orders
      <% end %>
      
      <%= link_to edit_order_path(@order), class: "btn btn-primary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Edit Order
      <% end %>
    </div>
  </div>
</div> 