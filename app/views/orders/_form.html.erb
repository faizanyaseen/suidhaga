<%= form_with(model: @order, class: "mt-6", multipart: true) do |f| %>
  <% if @order.errors.any? %>
    <div class="rounded-md bg-red-50 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @order.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-6 sm:space-y-5" data-controller="order-form">
    <%# Customer Selection %>
    <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start">
      <%= f.label :customer_id, class: "block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2" %>
      <div class="mt-1 sm:mt-0 sm:col-span-2">
        <%= f.collection_select :customer_id, @customers, :id, ->(c) { "#{c.first_name} #{c.last_name}" },
            { prompt: "Select a customer" },
            { class: "max-w-lg block focus:ring-indigo-500 focus:border-indigo-500 w-full shadow-sm sm:max-w-xs sm:text-sm border-gray-300 rounded-md py-2.5",
              data: { order_form_target: "customerSelect", action: "change->order-form#toggleLineItems" } } %>
      </div>
    </div>

    <%# Order Status - Only show in edit mode %>
    <% if @order.persisted? %>
      <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start">
        <%= f.label :status, class: "block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2" %>
        <div class="mt-1 sm:mt-0 sm:col-span-2">
          <%= f.select :status, Order.statuses.keys.map { |s| [s.humanize, s] },
              { prompt: "Select a status" },
              { class: "max-w-lg block focus:ring-indigo-500 focus:border-indigo-500 w-full shadow-sm sm:max-w-xs sm:text-sm border-gray-300 rounded-md py-2.5" } %>
        </div>
      </div>
    <% end %>

    <%# Line Items %>
    <div class="mt-6" data-order-form-target="lineItemsSection">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Line Items</h3>

      <div data-controller="nested-form" data-nested-form-wrapper-class-value="line-item-fields">
        <template data-nested-form-target="template">
          <%= f.fields_for :line_items, LineItem.new, child_index: 'NEW_RECORD' do |line_item| %>
            <%= render 'line_item_fields', f: line_item %>
          <% end %>
        </template>

        <div data-nested-form-target="container">
          <%= f.fields_for :line_items do |line_item| %>
            <%= render 'line_item_fields', f: line_item %>
          <% end %>
        </div>

        <button type="button" data-action="nested-form#add" data-order-form-target="addLineItemButton" class="mt-2 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          Add Line Item
        </button>
      </div>
    </div>
  </div>

  <div class="pt-5">
    <div class="flex justify-end">
      <%= link_to "Cancel", @order.persisted? ? order_path(@order) : orders_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= f.submit @order.persisted? ? "Update Order" : "Create Order", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
<% end %>