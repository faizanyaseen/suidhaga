<div class="line-item-fields border rounded-lg p-4 mb-4 relative">
  <%= f.hidden_field :_destroy %>
  
  <button type="button" data-action="nested-form#remove" class="absolute top-2 right-2 text-gray-400 hover:text-gray-500">
    <span class="sr-only">Remove line item</span>
    <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>

  <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
    <div class="sm:col-span-3">
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= f.text_field :name, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md py-2.5" %>
      </div>
    </div>

    <div class="sm:col-span-3">
      <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= f.text_area :description, rows: 2, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>
    </div>

    <div class="sm:col-span-2">
      <%= f.label :price, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= f.number_field :price, step: "0.01", min: 0, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md py-2.5" %>
      </div>
    </div>

    <div class="sm:col-span-2">
      <%= f.label :number_of_pieces, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= f.number_field :number_of_pieces, min: 1, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md py-2.5" %>
      </div>
    </div>

    <div class="sm:col-span-2">
      <%= f.label :status, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= f.select :status, LineItem.statuses.keys.map { |s| [s.humanize, s] }, 
            { prompt: "Select a status" }, 
            { class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md py-2.5" } %>
      </div>
    </div>

    <div class="sm:col-span-6" data-controller="image-upload">
      <%= f.label :images, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= f.file_field :images, multiple: true, accept: "image/*", 
            class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 py-2.5",
            data: { image_upload_target: "input" } %>
      </div>
      <div class="mt-2 grid grid-cols-2 gap-2" data-image-upload-target="preview">
        <% if f.object.persisted? && f.object.images.attached? %>
          <% f.object.images.each do |image| %>
            <%= image_tag image, class: "h-32 w-full object-cover rounded-lg" %>
          <% end %>
        <% end %>
      </div>
    </div>

    <%# Measurement Types %>
    <div class="sm:col-span-6">
      <div class="measurement-types" data-controller="nested-form">
        <template data-nested-form-target="template">
          <%= f.fields_for :line_items_measurement_types, LineItemsMeasurementType.new do |mt_form| %>
            <div class="measurement-type-fields grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6 border-t pt-4 mt-4">
              <%= mt_form.hidden_field :_destroy %>
              
              <div class="sm:col-span-3">
                <%= mt_form.label :measurement_type_id, "Measurement Type", class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= mt_form.collection_select :measurement_type_id, @measurement_types, :id, :key,
                      { prompt: "Select a measurement type" },
                      { class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md py-2.5" } %>
                </div>
              </div>

              <div class="sm:col-span-2">
                <%= mt_form.label :value, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= mt_form.text_field :value, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md py-2.5" %>
                </div>
              </div>

              <div class="sm:col-span-1 flex items-end">
                <button type="button" data-action="nested-form#remove" class="text-red-600 hover:text-red-700">Remove</button>
              </div>
            </div>
          <% end %>
        </template>

        <div data-nested-form-target="target">
          <%= f.fields_for :line_items_measurement_types do |mt_form| %>
            <div class="measurement-type-fields grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6 border-t pt-4 mt-4">
              <%= mt_form.hidden_field :_destroy %>
              
              <div class="sm:col-span-3">
                <%= mt_form.label :measurement_type_id, "Measurement Type", class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= mt_form.collection_select :measurement_type_id, @measurement_types, :id, :key,
                      { prompt: "Select a measurement type" },
                      { class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md py-2.5" } %>
                </div>
              </div>

              <div class="sm:col-span-2">
                <%= mt_form.label :value, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= mt_form.text_field :value, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md py-2.5" %>
                </div>
              </div>

              <div class="sm:col-span-1 flex items-end">
                <button type="button" data-action="nested-form#remove" class="text-red-600 hover:text-red-700">Remove</button>
              </div>
            </div>
          <% end %>
        </div>

        <button type="button" data-action="nested-form#add" class="mt-2 text-sm text-indigo-600 hover:text-indigo-500">
          Add Measurement
        </button>
      </div>
    </div>
  </div>
</div> 