<div class="max-w-4xl mx-auto">
  <div class="flex items-center mb-6">
    <%= link_to tailors_path, class: "btn btn-ghost btn-sm mr-4" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      <%= t('actions.back') %>
    <% end %>
    <h2 class="text-2xl font-bold"><%= t('tailors.edit_tailor') %></h2>
  </div>
  
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <%= form_with(model: @tailor, url: tailor_path(@tailor), method: :patch, class: "space-y-4") do |f| %>
        <% if @tailor.errors.any? %>
          <div class="alert alert-error mb-4">
            <div>
              <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
              <div>
                <h2 class="font-medium">
                  <%= t('errors.template.header', count: @tailor.errors.count, model: User.model_name.human.downcase) %>
                </h2>
                <ul class="mt-2 list-disc list-inside text-sm">
                  <% @tailor.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="form-control">
            <%= f.label :username, t('tailors.username'), class: "label" %>
            <%= f.text_field :username, class: "input input-bordered w-full", required: true %>
          </div>

          <div class="form-control">
            <%= f.label :phone, t('tailors.phone'), class: "label" %>
            <%= f.text_field :phone, class: "input input-bordered w-full", required: true %>
          </div>
        </div>

        <div class="form-control">
          <%= f.label :email, t('tailors.email'), class: "label" %>
          <%= f.email_field :email, class: "input input-bordered w-full", required: true %>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="form-control">
            <%= f.label :password, t('tailors.password'), class: "label" %>
            <%= f.password_field :password, class: "input input-bordered w-full" %>
            <p class="text-sm text-base-content/60 mt-1"><%= t('tailors.leave_blank') %></p>
          </div>

          <div class="form-control">
            <%= f.label :password_confirmation, t('tailors.password_confirmation'), class: "label" %>
            <%= f.password_field :password_confirmation, class: "input input-bordered w-full" %>
          </div>
        </div>

        <div class="form-control mt-6">
          <%= f.submit t('tailors.update'), class: "btn btn-primary w-full" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
