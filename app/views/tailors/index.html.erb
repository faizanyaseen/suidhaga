<div class="card bg-base-100 shadow-sm">
  <div class="card-body">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
      <div>
        <h2 class="card-title text-2xl font-bold">
          <%= t('tailors.title') %> <span class="text-base-content/60 text-lg"></span>
        </h2>
        <div class="mt-1">
          <% if @remaining_slots > 0 %>
            <span class="text-sm text-success">
              <%= t('dashboard.stats.you_can_add_more_slots', count: @remaining_slots, limit: @tailor_limit) %>
            </span>
          <% else %>
            <span class="text-sm text-error">
              <%= t('tailors.no_slots_remaining', limit: @tailor_limit) %>
            </span>
          <% end %>
        </div>
      </div>
      <% if !@limit_reached %>
        <%= link_to new_tailor_path, class: "btn btn-primary mt-4 sm:mt-0", data: { turbo: false } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          <%= t('tailors.new') %>
        <% end %>
      <% else %>
        <button class="btn btn-disabled mt-4 sm:mt-0" disabled>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          <%= t('tailors.new') %>
        </button>
      <% end %>
    </div>

    <% if @tailors.empty? %>
      <div class="alert alert-info">
        <div>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current flex-shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
          <span><%= t('tailors.no_tailors') %></span>
        </div>
      </div>
    <% else %>
      <div class="overflow-x-auto">
        <table class="table table-zebra w-full">
          <thead>
            <tr>
              <th><%= t('tailors.username') %></th>
              <th><%= t('tailors.phone') %></th>
              <th><%= t('tailors.email') %></th>
              <th><%= t('tailors.actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @tailors.each do |tailor| %>
              <tr>
                <td><%= tailor.username %></td>
                <td><%= tailor.phone %></td>
                <td><%= tailor.email %></td>
                <td>
                  <div class="flex space-x-2">
                    <%= link_to tailor_path(tailor), class: "btn btn-sm btn-outline" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                    <% end %>

                    <%= link_to edit_tailor_path(tailor), class: "btn btn-sm btn-outline", data: { turbo: false } do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                    <% end %>
                    
                    <%= button_to tailor_path(tailor), method: :delete, class: "btn btn-sm btn-outline btn-error", data: { turbo_confirm: t('tailors.confirm_delete') } do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div> 