<div class="card bg-base-100 shadow-xl">
  <div class="card-body">
    <%= form_with(model: customer, local: true) do |f| %>
      <% if customer.errors.any? %>
        <div class="alert alert-error mb-4">
          <div>
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            <div>
              <h2 class="font-medium">
                <%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:
              </h2>
              <ul class="mt-2 list-disc list-inside text-sm">
                <% customer.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="form-control">
          <%= f.label :first_name, class: "label" %>
          <%= f.text_field :first_name, class: "input input-bordered w-full", placeholder: "Enter first name" %>
        </div>
        
        <div class="form-control">
          <%= f.label :last_name, class: "label" %>
          <%= f.text_field :last_name, class: "input input-bordered w-full", placeholder: "Enter last name" %>
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
        <div class="form-control">
          <%= f.label :phone, class: "label" %>
          <%= f.telephone_field :phone, class: "input input-bordered w-full #{'input-error' if customer.errors[:phone].any?}", placeholder: "Enter phone number" %>
          <% if customer.errors[:phone].any? %>
            <div class="text-error text-sm mt-1"><%= customer.errors[:phone].join(', ') %></div>
          <% end %>
        </div>
        
        <div class="form-control">
          <%= f.label :email, class: "label" %>
          <%= f.email_field :email, class: "input input-bordered w-full", placeholder: "Enter email address" %>
        </div>
      </div>
      
      <div class="form-control mt-4">
        <%= f.label :address, class: "label" %>
        <%= f.text_area :address, class: "textarea textarea-bordered w-full", rows: 3, placeholder: "Enter customer address" %>
      </div>
      
      <!-- Measurements Section -->
      <div class="divider">Measurements</div>
      
      <div data-controller="nested-form" data-nested-form-wrapper-class-value="measurement-fields">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-lg font-medium">Measurements</h3>
          <button type="button"
                  data-action="nested-form#add"
                  class="btn btn-primary btn-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Add Measurement
          </button>
        </div>
        
        <div class="space-y-4" data-nested-form-target="container">
          <% customer.customers_measurement_types.each do |measurement| %>
            <%= f.fields_for :customers_measurement_types, measurement do |measurement_form| %>
              <div class="measurement-fields flex flex-col md:flex-row items-start md:items-center gap-4 p-4 border border-base-300 rounded-lg">
                <%= measurement_form.hidden_field :_destroy %>
                <div class="form-control flex-1 w-full">
                  <%= measurement_form.label :measurement_type_id, "Type", class: "label" %>
                  <%= measurement_form.collection_select :measurement_type_id,
                      MeasurementType.all,
                      :id,
                      :key,
                      { prompt: "Select measurement type" },
                      class: "select select-bordered w-full" %>
                </div>
                <div class="form-control flex-1 w-full">
                  <%= measurement_form.label :value, class: "label" %>
                  <%= measurement_form.number_field :value,
                      step: "0.01",
                      placeholder: "Enter measurement value",
                      class: "input input-bordered w-full" %>
                </div>
                <div class="mt-8">
                  <button type="button"
                          data-action="nested-form#remove"
                          class="btn btn-error btn-circle btn-sm">
                    <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  </button>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
        
        <template data-nested-form-target="template">
          <%= f.fields_for :customers_measurement_types, CustomersMeasurementType.new, child_index: 'NEW_RECORD' do |measurement_form| %>
            <div class="measurement-fields flex flex-col md:flex-row items-start md:items-center gap-4 p-4 border border-base-300 rounded-lg">
              <%= measurement_form.hidden_field :_destroy %>
              <div class="form-control flex-1 w-full">
                <%= measurement_form.label :measurement_type_id, "Type", class: "label" %>
                <%= measurement_form.collection_select :measurement_type_id,
                    MeasurementType.all,
                    :id,
                    :key,
                    { prompt: "Select measurement type" },
                    class: "select select-bordered w-full" %>
              </div>
              <div class="form-control flex-1 w-full">
                <%= measurement_form.label :value, class: "label" %>
                <%= measurement_form.number_field :value,
                    step: "0.01",
                    placeholder: "Enter measurement value",
                    class: "input input-bordered w-full" %>
              </div>
              <div class="mt-8">
                <button type="button"
                        data-action="nested-form#remove"
                        class="btn btn-error btn-circle btn-sm">
                  <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </button>
              </div>
            </div>
          <% end %>
        </template>
      </div>
      
      <div class="form-control mt-6">
        <%= f.submit customer.new_record? ? "Create Customer" : "Update Customer", class: "btn btn-primary w-full" %>
      </div>
    <% end %>
  </div>
</div>