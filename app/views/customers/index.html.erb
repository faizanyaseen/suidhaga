<div class="card bg-base-100 shadow-sm">
  <div class="card-body">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
      <h2 class="card-title text-2xl font-bold">Customers</h2>
      <%= link_to new_customer_path, class: "btn btn-primary mt-4 sm:mt-0", data: { turbo: false } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        New Customer
      <% end %>
    </div>
    
    <div class="mb-4">
      <%= form_with(url: customers_path, method: :get, data: { turbo_frame: "customers_list", turbo_action: "advance" }) do |f| %>
        <div class="form-control">
          <div class="input-group flex">
            <%= f.text_field :search, placeholder: "Search customers...", class: "input input-bordered w-full", value: params[:search] %>
            <button class="btn btn-square">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </button>
          </div>
        </div>
      <% end %>
    </div>

    <%= turbo_frame_tag "customers_list" do %>
      <div class="overflow-x-auto">
        <table class="table table-zebra w-full">
          <thead>
            <tr>
              <th>Name</th>
              <th>Phone</th>
              <th>Email</th>
              <th>Address</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.first_name %> <%= customer.last_name %></td>
                <td><%= customer.phone %></td>
                <td><%= customer.email %></td>
                <td><%= customer.address %></td>
                <td>
                  <div class="flex space-x-2">
                    <%= link_to edit_customer_path(customer), class: "btn btn-sm btn-outline", data: { turbo: false } do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="mt-4">
        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    <% end %>
  </div>
</div>

<div class="mt-4">
  <%= paginate @customers if @customers.respond_to?(:total_pages) %>
</div>
