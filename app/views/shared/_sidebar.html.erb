<div class="drawer-side shadow-sm">
  <label for="my-drawer-2" aria-label="close sidebar" class="drawer-overlay"></label>
  <ul class="menu bg-base-100 text-base-content w-64 p-4 h-full overflow-y-auto">
    <!-- Shop name/logo -->
    <li class="mb-4 shop-info">
      <div class="flex flex-col items-left py-4">
        <% if current_shop_logo&.attached? %>
          <%= image_tag current_shop_logo, class: "w-16 h-16 rounded-lg sidebar-logo mb-2" %>
        <% end %>
        <h2 class="text-lg font-semibold shop-name"><%= current_shop&.name %></h2>
      </div>
    </li>

    <!-- Sidebar content here -->
    <li>
      <%= link_to root_path, class: "#{current_page?(root_path) ? 'active' : ''}" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
        <%= t('navigation.dashboard') %>
      <% end %>
    </li>
    
    <li>
      <%= link_to customers_path, class: "#{controller_name == 'customers' ? 'active' : ''}" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        <%= t('navigation.customers') %>
      <% end %>
    </li>
    
    <li>
      <%= link_to orders_path, class: "#{controller_name == 'orders' ? 'active' : ''}" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
        </svg>
        <%= t('navigation.orders') %>
      <% end %>
    </li>
    
    <li>
      <%= link_to measurement_types_path, class: "#{controller_name == 'measurement_types' ? 'active' : ''}" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
        </svg>
        <%= t('navigation.measurement_types') %>
      <% end %>
    </li>
  </ul>
</div>